{
  "projectName": "Legal Agreement Collaboration Platform",
  "defaultBranch": "main",
  "organizationalPreferences": {
    "treeViewStyle": "default",
    "sidebarWidth": "medium",
    "tabSize": 2,
    "useTabs": false,
    "insertFinalNewline": true,
    "trimTrailingWhitespace": true
  },
  "folderStructure": {
    "src": {
      "components": {
        "auth": "Authentication-related components",
        "agreements": "Agreement creation and management components",
        "chat": "Chat and negotiation interface components",
        "signature": "Digital signature components", 
        "dashboard": "Dashboard and overview components",
        "common": "Shared UI components",
        "layout": "Layout components"
      },
      "pages": "Next.js page components",
      "hooks": "Custom React hooks",
      "types": "TypeScript type definitions",
      "utils": "Utility functions",
      "lib": "Third-party integrations",
      "services": "Firebase and API services",
      "styles": "Global styles and theme configuration"
    }
  },
  "templateFiles": {
    "component": {
      "src/templates/Component.tsx": "Sample React component template",
      "src/templates/Component.module.css": "Sample CSS module template"
    },
    "hook": {
      "src/templates/useHook.ts": "Sample custom hook template"
    },
    "service": {
      "src/templates/service.ts": "Sample service template"
    }
  },
  "linting": {
    "useEslint": true,
    "usePrettier": true,
    "typescript": {
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true
    }
  },
  "themes": {
    "lightTheme": {
      "primary": "#1A365D",
      "secondary": "#2C7A7B",
      "accent": "#D69E2E",
      "neutral": "#F7FAFC",
      "success": "#38A169",
      "warning": "#DD6B20",
      "error": "#E53E3E"
    },
    "darkTheme": {
      "primary": "#2A4365",
      "secondary": "#319795",
      "accent": "#ECC94B",
      "neutral": "#1A202C",
      "success": "#48BB78",
      "warning": "#ED8936",
      "error": "#F56565"
    }
  },
  "devEnvironment": {
    "nodeVersion": ">=18.0.0",
    "packageManager": "npm"
  }
} 